# Hugging Face token for model access
# Get one at https://huggingface.co/settings/tokens
# Must accept license at https://huggingface.co/nvidia/personaplex
HF_TOKEN=your_huggingface_token

# Server configuration
PERSONAPLEX_PORT=8998
CONTEXT_API_PORT=8999
PUBLIC_HOST=localhost

# CORS allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# Session configuration
SESSION_TTL_MINUTES=60

# Voice prompt (see PersonaPlex docs for options)
# Natural voices: NATF0-3 (female), NATM0-3 (male)
# Variety voices: VARF0-4 (female), VARM0-4 (male)
VOICE_PROMPT=NATF2.pt

# Set to true to skip starting PersonaPlex (for development)
SKIP_PERSONAPLEX=false

# Set to true if GPU has less than 16GB VRAM
CPU_OFFLOAD=false

# SSL directory for self-signed certs (created automatically)
SSL_DIR=/tmp/personaplex-ssl

# Environment
NODE_ENV=development
